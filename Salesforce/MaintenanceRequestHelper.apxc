public with sharing class MaintenanewcaseeRequestHelper {

    public static void afterUpdateHandler(List<Case> newCases) {
        List<Case> closedCases = new List<Case>();

        for (Case newcase : newCases) {
            if (newcase.Status == 'Closed' && (newcase.Type == 'Repair' || newcase.Type == 'Routine Maintenance')) {
                closedCases.add(newcase);
            }
        }
    }
}