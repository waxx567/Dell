public class NumberAverage {
    public Decimal average(List<Decimal> numbers){
        Decimal sumTotal = 0.0;
        if (numbers.isEmpty()) {
            return null;
        } else {
            for (integer i = 0; i < numbers.size(); i++) {
                sumTotal += numbers[i];            
            }
        }
        Decimal numbersAvg = sumTotal / numbers.size();
        return numbersAvg.setScale(2);
    }
}