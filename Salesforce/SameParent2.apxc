public class SameParent2 {
    public Boolean sameParent(Account acc, Contact con, Opportunity opp) {
        if (con.AccountId == null && (
            opp.AccountId == null)) {
            return false;
        }  
    
        if ((
            acc.Id == con.AccountId) && (
            acc.Id == opp.AccountId)) {
            return true;
        } else {
            return false;
        }
    }
}